<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#033159">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="50dp"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <android.widget.SearchView
                android:layout_width="390dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:background="@drawable/for_search"
                android:closeIcon="@drawable/search_close"
                android:iconifiedByDefault="false"
                android:queryBackground="@null"
                android:queryHint="원하시는 작품을 검색해 보세요."
                android:fontFamily="@font/gmarketsansttfmedium"
                android:searchIcon="@drawable/search_search"
                android:layout_marginBottom="50dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="15dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="15dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="영화"
                        android:textSize="25dp"
                        android:textColor="@color/white"
                        android:fontFamily="@font/gmarketsansttfmedium"
                        android:layout_marginRight="5dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="(28)"
                        android:textColor="@color/white"
                        android:textSize="20dp"
                        android:layout_marginRight="260dp"
                        android:layout_marginBottom="3dp"/>

                    <ImageButton
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:text="더보기"
                        android:textColor="@color/white"
                        android:src="@drawable/more"
                        android:background="#00ff0000"/>

                </LinearLayout>

                <HorizontalScrollView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scrollbars="none">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="15dp">

                            <ImageView
                                android:layout_width="100dp"
                                android:layout_height="150dp"
                                android:scaleType="fitXY"
                                android:src="@drawable/understand"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="15dp">

                            <ImageView
                                android:layout_width="100dp"
                                android:layout_height="150dp"
                                android:scaleType="fitXY"
                                android:src="@drawable/bluelock"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="15dp">

                            <ImageView
                                android:layout_width="100dp"
                                android:layout_height="150dp"
                                android:scaleType="fitXY"
                                android:src="@drawable/taxi"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="15dp">

                            <ImageView
                                android:layout_width="100dp"
                                android:layout_height="150dp"
                                android:scaleType="fitXY"
                                android:src="@drawable/kill"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="15dp">

                            <ImageView
                                android:layout_width="100dp"
                                android:layout_height="150dp"
                                android:scaleType="fitXY"
                                android:src="@drawable/idol"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="15dp">

                            <ImageView
                                android:layout_width="100dp"
                                android:layout_height="150dp"
                                android:scaleType="fitXY"
                                android:src="@drawable/sangkyeonni"/>

                        </LinearLayout>

                    </LinearLayout>

                </HorizontalScrollView>

            </LinearLayout>














            <LinearLayout
                android:layout_marginTop="60dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="15dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="15dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="TV 프로그램"
                        android:textSize="25dp"
                        android:textColor="@color/white"
                        android:fontFamily="@font/gmarketsansttfmedium"
                        android:layout_marginRight="5dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="(30)"
                        android:textColor="@color/white"
                        android:textSize="20dp"
                        android:layout_marginRight="165dp"
                        android:layout_marginBottom="3dp"/>

                    <ImageButton
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:text="더보기"
                        android:textColor="@color/white"
                        android:src="@drawable/more"
                        android:background="#00ff0000"/>

                </LinearLayout>

                <HorizontalScrollView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scrollbars="none">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="15dp">

                            <ImageView
                                android:layout_width="100dp"
                                android:layout_height="150dp"
                                android:scaleType="fitXY"
                                android:src="@drawable/understand"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="15dp">

                            <ImageView
                                android:layout_width="100dp"
                                android:layout_height="150dp"
                                android:scaleType="fitXY"
                                android:src="@drawable/bluelock"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="15dp">

                            <ImageView
                                android:layout_width="100dp"
                                android:layout_height="150dp"
                                android:scaleType="fitXY"
                                android:src="@drawable/taxi"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="15dp">

                            <ImageView
                                android:layout_width="100dp"
                                android:layout_height="150dp"
                                android:scaleType="fitXY"
                                android:src="@drawable/kill"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="15dp">

                            <ImageView
                                android:layout_width="100dp"
                                android:layout_height="150dp"
                                android:scaleType="fitXY"
                                android:src="@drawable/idol"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="15dp">

                            <ImageView
                                android:layout_width="100dp"
                                android:layout_height="150dp"
                                android:scaleType="fitXY"
                                android:src="@drawable/sangkyeonni"/>

                        </LinearLayout>

                    </LinearLayout>

                </HorizontalScrollView>

            </LinearLayout>





        </LinearLayout>

    </ScrollView>

</LinearLayout>