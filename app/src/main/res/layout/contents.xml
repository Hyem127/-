<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:background="#033159">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="35dp"
                android:text="작품 평가하기"
                android:fontFamily="@font/gmarketsansttfmedium"
                android:textColor="@color/white"
                android:layout_marginBottom="20dp">
            </TextView>

            <ImageView
                android:layout_width="200dp"
                android:layout_height="300dp"
                android:layout_gravity="center"
                android:scaleType="fitCenter"
                android:src="@drawable/theglory"
                android:layout_marginBottom="20dp">
            </ImageView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="30dp"
                android:text="더 글로리"
                android:fontFamily="@font/gmarketsansttfmedium"
                android:textColor="@color/white"
                android:layout_marginBottom="20dp">
            </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="20dp"
                android:text="이 작품은 어떠셨나요?"
                android:fontFamily="@font/gmarketsansttflight"
                android:textColor="@color/white">
            </TextView>

            <View
                android:layout_width="350dp"
                android:layout_height="4px"
                android:background="@color/white"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center">

                <Button
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:background="@drawable/radius_like"
                    android:text="좋아요"
                    android:fontFamily="@font/gmarketsansttfmedium"
                    android:layout_marginRight="30dp"/>

                <Button
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:background="@drawable/radius_no"
                    android:text="안 봄"
                    android:fontFamily="@font/gmarketsansttfmedium"
                    android:layout_marginRight="30dp" />

                <Button
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:background="@drawable/radius_hate"
                    android:text="싫어요"
                    android:fontFamily="@font/gmarketsansttfmedium"/>

            </LinearLayout>

            <View
                android:layout_width="350dp"
                android:layout_height="4px"
                android:background="@color/white"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="40dp"/>

            <Button
                android:layout_width="350dp"
                android:layout_height="60dp"
                android:text="다음으로 넘어가기"
                android:fontFamily="@font/gmarketsansttfmedium"
                android:background="@drawable/for_radius_blue"
                android:textColor="@color/white"
                android:layout_gravity="center"
                android:layout_marginBottom="0dp">

            </Button>



        </LinearLayout>



</LinearLayout>