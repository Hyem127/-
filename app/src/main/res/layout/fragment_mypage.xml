<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:background="#033159">


<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="35dp"
            android:fontFamily="@font/cafe"
            android:text="마이페이지"
            android:textColor="@color/white"
            android:layout_marginBottom="100dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="20dp">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/fox"
                android:layout_marginRight="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/cafe"
                android:text="혜민's 님"
                android:textColor="@color/white"
                android:textSize="25dp"
                android:layout_marginRight="80dp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/for_radius_blue"
                android:textColor="@color/white"
                android:text="로그아웃" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">

            <Button
                android:id="@+id/contents_evaluation"
                android:layout_width="300dp"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:text="작품 평가하러 가기"
                android:textColor="@color/white"
                android:background="@drawable/for_radius_blue"
                android:textSize="20dp"
                android:layout_marginBottom="50dp"/>

            <Button
                android:id="@+id/contents_list"
                android:layout_width="300dp"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:text="평가한 작품 목록"
                android:textColor="@color/white"
                android:background="@drawable/for_radius_blue"
                android:textSize="20dp"
                android:layout_marginBottom="10dp"/>

            <Button
                android:id="@+id/community_list"
                android:layout_width="300dp"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:text="작성한 글 목록"
                android:textColor="@color/white"
                android:background="@drawable/for_radius_blue"
                android:textSize="20dp" />
        </LinearLayout>

    </LinearLayout>

</FrameLayout>

</LinearLayout>